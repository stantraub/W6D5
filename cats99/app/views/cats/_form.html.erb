<% if type == :new %>
  <% action_url = cats_url %>
  <% button_text = 'Create Cat' %>
<% elsif type == :edit %>
  <% action_url = cat_url(cat) %>
  <% button_text = 'Update Cat' %>
<% end %>


<form action="<%= action_url %>" method="post">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="name">name:
    <input type="text" id="name" name="cat[name]" 
          value="<%= cat.name %>">
  </label>
  <br>
  <label for="birth_date">birth_date:
    <input type="text" id="birth_date" name="cat[birth_date]" 
          value="<%= cat.birth_date %>">
  </label> 
  <br>
  <select name="cat[color]">
    <% Cat::COLORS.each do |color| %>
      <option value=<%= color %>><%= color %></option>
    <% end %>
  </select>
  <br>
  <select name="cat[sex]">
    <option value="M">Male</option>
    <option value="F">Female</option>
  </select>
  <br>
  <label for="description">description:
    <textarea id="description" name="cat[description]" 
          body="<%= cat.description %>"></textarea>
  </label>
  <br>
  <input type="submit" value="<%= button_text %>">
</form>